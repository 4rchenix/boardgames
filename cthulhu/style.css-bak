button {
    position: absolute;
    width: 100px;
    left: 50%;
    transform: translateX(-50%);
    color: white;
    background-color: #1F7597;
    border: none;
    font-family: Lato;
    font-size: 20px;
    text-transform: uppercase;
    cursor: pointer;
    font-weight: 300;
    transition: background-color 0.3s, color 0.3s;
}

button:hover { font-weight: 600; }
button:hover { margin-right: 20px; }

button:focus {
    outline: none;
}

